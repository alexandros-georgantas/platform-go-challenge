# Builder
FROM golang:1.22.4-alpine3.20 as builder

RUN apk update && apk upgrade && \
    apk --update add git make bash build-base

WORKDIR /app

COPY . .

RUN make build

# Distribution
FROM golang:1.22.4-alpine3.20

RUN apk update && apk upgrade && \
    apk --update --no-cache add tzdata && \
    mkdir /app 

WORKDIR /app 

EXPOSE 3000

COPY --from=builder /app/main /app/

CMD /app/main